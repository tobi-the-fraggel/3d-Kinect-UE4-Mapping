<Window x:Class="Mousenect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:controls="clr-namespace:LightBuzz.Vitruvius.Controls;assembly=LightBuzz.Vitruvius"
        Title="Mousenect" Height="455.5" Width="900" ResizeMode="CanMinimize" WindowStartupLocation="CenterOwner"
        Closing="Window_Closing" Unloaded="Window_Unloaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="550"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Row="0" Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Datei">
                    <MenuItem Header="Einstellungen" Click="OpenSettings"></MenuItem>
                    <MenuItem Header="Beenden"></MenuItem>
                </MenuItem>
                <MenuItem Header="Steuerung umschalten">
                    <MenuItem Header="Maus" IsCheckable="True" IsChecked="True" Click="MenuItem_Click"></MenuItem>
                    <MenuItem Header="PowerPoint" IsCheckable="True" Click="MenuItem_Click"></MenuItem>
                    <MenuItem Header="Zeichnungen" IsCheckable="True" Click="MenuItem_Click"></MenuItem>
                    <Separator></Separator>
                    <MenuItem Header="Unreal-Avateering"></MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Grid Grid.Column="0" Grid.Row="1">
            <ComboBox Name="Programm_Auswahl" SelectionChanged="ComboBox_SelectionChanged" HorizontalAlignment="Left" Margin="100,14,0,0" VerticalAlignment="Top" Width="180" Height="22">
                <ComboBoxItem Content="Maus" HorizontalAlignment="Left" Width="178" Selector.IsSelected="True"/>
                <ComboBoxItem Content="PowerPoint" HorizontalAlignment="Left" Width="178"/>
            </ComboBox>
            <Label Name="Status_Maus" Content="Steuerung von " HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" Margin="10,10,0,0" Height="26"/>
        </Grid>
        <Grid Grid.Row="1"  Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Hand Left" Name="HL_State" Width="100" Background="White" Margin="10,0,340,0" />
            <Label Grid.Row="0" Content="Gesture" Name="Gesture" Width="100" Background="White" />
            <Label Grid.Row="0" Content="Hand Right" x:Name="HR_State" Width="100" Background="White" Margin="340,0,10,0" />
            <controls:KinectViewer x:Name="viewer" Grid.Row="1"></controls:KinectViewer>
        </Grid>
    </Grid>
</Window>
