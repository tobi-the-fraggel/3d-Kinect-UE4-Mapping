<Window x:Class="KinectV2MouseControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mousenect" Height="544.53" Width="1034.276" ResizeMode="CanMinimize" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Window.Resources>
        <SolidColorBrush x:Key="MediumGreyBrush" Color="#ff6e6e6e" />
        <SolidColorBrush x:Key="KinectPurpleBrush" Color="#ff52318f" />
        <SolidColorBrush x:Key="KinectBlueBrush" Color="#ff00BCF2" />
    </Window.Resources>
    <Grid Margin="0,0,0,2">
        <Grid.RowDefinitions>
            <RowDefinition Height="457*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid KeyDown="txtMouseSensitivity_KeyDown" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="69*"/>
                <RowDefinition Height="142*"/>
            </Grid.RowDefinitions>
            <Slider x:Name="MouseSensitivity" Margin="10,40,10,0" VerticalAlignment="Top" Height="26" Maximum="6" ValueChanged="MouseSensitivity_ValueChanged" Minimum="1" Value="3.5"/>
            <Label Content="Mouse Sensitivity" Margin="10,10,118,0" VerticalAlignment="Top"/>
        </Grid>
        <TextBox x:Name="txtMouseSensitivity" Height="23" Margin="0,12,20,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="3.5" FontSize="15" TextAlignment="Right" HorizontalAlignment="Right" Width="78"/>
        <Button x:Name="btnDefault" Content="Default" HorizontalAlignment="Right" Margin="0,130,368,0" Width="74" Click="btnDefault_Click" Height="24" VerticalAlignment="Top"/>
        <CheckBox x:Name="chkNoClick" Content="No clicks, move cursor only" HorizontalAlignment="Left" Margin="266,130,0,0" Height="16" VerticalAlignment="Top" Checked="chkNoClick_Checked" Unchecked="chkNoClick_Unchecked"/>
        <Slider x:Name="CursorSmoothing" Margin="10,99,10,0" VerticalAlignment="Top" Height="26" Maximum="0.95" SmallChange="0.01" Value="0.2" ValueChanged="CursorSmoothing_ValueChanged"/>
        <Label Content="Cursor Smoothing" Margin="10,66,118,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCursorSmoothing" Height="23" Margin="0,71,22,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="0.2" FontSize="15" TextAlignment="Right" HorizontalAlignment="Right" Width="76"/>
        <Grid Margin="20,159,0,9">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Viewbox Grid.Row="1" HorizontalAlignment="Center">
                <Image Source="{Binding ImageSource}" Stretch="UniformToFill" />
            </Viewbox>
        </Grid>
    </Grid>
</Window>
