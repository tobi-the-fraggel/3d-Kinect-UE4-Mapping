<Window x:Class="KinectV2MouseControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mousenect" Height="205.197" Width="458.276" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid Margin="0,0,0,2">
        <Grid KeyDown="txtMouseSensitivity_KeyDown" Margin="0,0,0,10">
            <Slider x:Name="MouseSensitivity" Margin="10,40,9.5,0" VerticalAlignment="Top" Height="26" Maximum="6" ValueChanged="MouseSensitivity_ValueChanged" Minimum="1" Value="3.5"/>
            <Label Content="Mouse Sensitivity" Margin="10,10,117.5,0" VerticalAlignment="Top"/>
        </Grid>
            <TextBox x:Name="txtMouseSensitivity" Height="23" Margin="0,12,20.5,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="3.5" FontSize="15" TextAlignment="Right" HorizontalAlignment="Right" Width="77"/>
            <Button x:Name="btnDefault" Content="Default" HorizontalAlignment="Right" Margin="0,130,367.5,0" Width="74" Click="btnDefault_Click" Height="24" VerticalAlignment="Top"/>
            <CheckBox x:Name="chkNoClick" Content="No clicks, move cursor only" HorizontalAlignment="Left" Margin="266,130,0,0" Height="16" VerticalAlignment="Top" Checked="chkNoClick_Checked" Unchecked="chkNoClick_Unchecked"/>
            <Slider x:Name="CursorSmoothing" Margin="10,99,9.5,0" VerticalAlignment="Top" Height="26" Maximum="0.95" SmallChange="0.01" Value="0.2" ValueChanged="CursorSmoothing_ValueChanged"/>
            <Label Content="Cursor Smoothing" Margin="10,66,117.5,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtCursorSmoothing" Height="23" Margin="0,71,21.5,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="0.2" FontSize="15" TextAlignment="Right" HorizontalAlignment="Right" Width="76"/>
        
    </Grid>
</Window>
