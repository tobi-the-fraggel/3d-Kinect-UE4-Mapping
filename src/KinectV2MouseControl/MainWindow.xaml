<Window x:Class="KinectV2MouseControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:LightBuzz.Vitruvius.Controls;assembly=LightBuzz.Vitruvius"
        Title="Mousenect" Height="544.53" Width="1034.276" ResizeMode="CanMinimize" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Window.Resources>
        <SolidColorBrush x:Key="MediumGreyBrush" Color="#ff6e6e6e" />
        <SolidColorBrush x:Key="KinectPurpleBrush" Color="#ff52318f" />
        <SolidColorBrush x:Key="KinectBlueBrush" Color="#ff00BCF2" />
    </Window.Resources>
    <Grid Name="Grid_Global" Margin="0,0,0,2">
        <Grid.RowDefinitions>
            <RowDefinition Height="457*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.RowSpan="2" Margin="0,10,573,-10">
            <Grid.RowDefinitions>
                <RowDefinition Height="144*"/>
                <RowDefinition Height="113*"/>
            </Grid.RowDefinitions>
            <Slider x:Name="MouseSensitivity" Margin="10,73,10,0" VerticalAlignment="Top" Height="26" Maximum="6" ValueChanged="MouseSensitivity_ValueChanged" Minimum="1" Value="3.5"/>
            <Label Content="Mouse Sensitivity" Margin="10,43,118,0" VerticalAlignment="Top" Height="26"/>

            <TextBox x:Name="txtMouseSensitivity" Height="23" Margin="0,45,20,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="3.5" FontSize="15" TextAlignment="Right" HorizontalAlignment="Right" Width="78"/>
            <Button x:Name="btnDefault" Content="Auf Standard zurücksetzen" HorizontalAlignment="Right" Margin="0,163,275,0" Width="167" Click="btnDefault_Click" Height="24" VerticalAlignment="Top"/>
            <CheckBox x:Name="chkNoClick" Content="No clicks, move cursor only" HorizontalAlignment="Left" Margin="264,168,0,0" Height="16" VerticalAlignment="Top" Checked="chkNoClick_Checked" Unchecked="chkNoClick_Unchecked" Width="164"/>
            <Slider x:Name="CursorSmoothing" Margin="10,132,10,0" VerticalAlignment="Top" Height="26" Maximum="0.95" SmallChange="0.01" Value="0.2" ValueChanged="CursorSmoothing_ValueChanged"/>
            <Label Content="Cursor Smoothing" Margin="10,99,118,0" VerticalAlignment="Top" Height="26"/>
            <TextBox x:Name="txtCursorSmoothing" Height="23" Margin="0,104,22,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="0.2" FontSize="15" TextAlignment="Right" HorizontalAlignment="Right" Width="76"/>
            <ComboBox HorizontalAlignment="Left" Margin="100,14,0,0" VerticalAlignment="Top" Width="180">
                <ComboBoxItem Content="Maus" HorizontalAlignment="Left" Width="178" Selector.IsSelected="True"/>
                <ComboBoxItem Content="PowerPoint" HorizontalAlignment="Left" Width="178"/>
            </ComboBox>
            <Label Name="Status_Maus" Content="Steuerung von " HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" Margin="10,10,0,0"/>
        </Grid>
        <Grid Margin="455,10,10,9">
            <controls:KinectViewer x:Name="viewer" />
        </Grid>
    </Grid>
</Window>
