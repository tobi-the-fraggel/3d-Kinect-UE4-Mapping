<Window x:Class="Mousenect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:controls="clr-namespace:LightBuzz.Vitruvius.Controls;assembly=LightBuzz.Vitruvius"
        Title="Mousenect" Height="455.5" Width="900" ResizeMode="CanMinimize" WindowStartupLocation="CenterOwner"
        Closing="Window_Closing" Unloaded="Window_Unloaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="550"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Datei">
                    <MenuItem Header="Einstellungen" Click="OpenSettings"></MenuItem>
                    <MenuItem Header="Beenden"></MenuItem>
                </MenuItem>
                <MenuItem Header="Steuerung umschalten">
                    <MenuItem Name="MI_Maus" Header="Maus" IsCheckable="True" IsChecked="True" Click="MenuItem_Click"></MenuItem>
                    <MenuItem Name="MI_PP" Header="PowerPoint" IsCheckable="True" Click="MenuItem_Click"></MenuItem>
                    <MenuItem Name="MI_Zeichnung" Header="Zeichnungen" IsCheckable="True" Click="MenuItem_Click"></MenuItem>
                    <Separator></Separator>
                    <MenuItem Header="Unreal-Avateering"></MenuItem>
                </MenuItem>
            </Menu>
            <StatusBar Height="30" DockPanel.Dock="Bottom" VerticalAlignment="Bottom" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            
            </StatusBar>
        </DockPanel>
        <Grid Grid.Column="0">
            
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Hand Left" Name="HL_State" Width="100" Background="White" Margin="10,0,340,0" />
            <Label Grid.Row="0" Content="Gesture" Name="Gesture" Width="100" Background="White" />
            <Label Grid.Row="0" Content="Hand Right" x:Name="HR_State" Width="100" Background="White" Margin="340,0,10,0" />
            <controls:KinectViewer x:Name="viewer" Grid.Row="1"></controls:KinectViewer>
        </Grid>
    </Grid>
</Window>
